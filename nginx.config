server {
    listen 80;
    server_name _;

    # Configuración para servir archivos de medios
    location /media/ {
        alias /path/to/your/media/;  # Cambia esto por el path absoluto de tu carpeta 'media'
    }

    # Configuración para servir archivos estáticos
    location /static/ {
        alias /path/to/your/static/;  # Cambia esto por el path absoluto de tu carpeta 'static'
    }

    # Proxy para la aplicación Django
    location / {
        proxy_pass http://127.0.0.1:8000;  # Cambia el puerto según tu configuración
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}